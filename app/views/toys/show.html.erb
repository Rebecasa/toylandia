<div class="toy-card">

  <div class="row">
    <div class="col-xs-12 col-md-6 toy-info">
      <h1><%= @toy.name %></h1>

      <p class="toy-price"><font size="-1"><i class="fas fa-coins"></i></font> <%= number_to_currency(@toy.price, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u") %></p>

      <p class="toy-category"><i class="fas fa-tags"></i> <%= @toy.category %></p>

      <p class="toy-book"><%= link_to "Book this toy", new_toy_booking_path(@toy),class: "button-form"%></p>
    </div>

    <div class="col-xs-12 col-md-6 toy-photo-container">
      <%= cl_image_tag @toy.photo, height: 200, crop: :fill, class: "toy-photo" %>
    </div>

    <div class="col-xs-12 toy-description">
      <p><%= @toy.description %></p>
    </div>

    <div class="col-xs-12 col-md-6 toy-book">

    </div>
  </div>

  <div class="toy-card-footer">
    <div>
      <% if current_user == @toy.user %>
        <%= link_to edit_toy_path(@toy) do %>
          <i class="far fa-edit"></i>
        <% end %>
      <% end %>
    </div>
    <%= link_to toys_path do %>
        <i class="fas fa-long-arrow-alt-left"></i>
    <% end %>

</div>
