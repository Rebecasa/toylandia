<div class="various-forms">
  <%= form_for toy do |f| %>

    <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-inputs">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
    </div>

    <div class="form-inputs">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control", id: "price-field", placeholder: "0,00€", value: number_to_currency(toy.price, unit: "€", separator: ",", delimiter: ".", format: "%n %u") unless :price.nil? %>
    </div>

    <div class="form-inputs">
      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>
    </div>

    <div class="form-inputs">
      <%= f.label :category %>
      <%= f.select :category, ['cars', 'cuddly', 'creepy', 'educational', 'other'], class: "form-control" %>
    </div>

    <div class="form-inputs align-center">
      <%= f.label :photo %>
      <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png', class: "button-form" %>
      <%= f.hidden_field :photo_cache %>
    </div>

    <%= hidden_field_tag :status, "available" %>

    <%= f.submit id: "toy-form-btn", class: "button-form" %>
  <% end %>
</div>
