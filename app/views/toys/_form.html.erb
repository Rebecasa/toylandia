<%= form_for toy do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :price %>
  <%= f.text_field :price, value: number_to_currency(0, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u"), class: "form-control" %>

  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control" %>

  <%= f.label :category %>
  <%= f.select :category, ['cars', 'cuddly', 'creepy', 'educational', 'other'], class: "form-control" %>

  <%= f.label :photo %>
  <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png' %>
  <%= f.hidden_field :photo_cache %>

  <%= hidden_field_tag :status, "available" %>

  <%= f.submit class: "btn btn-warning" %>
<% end %>
