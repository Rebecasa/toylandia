<div class="wrapper">
  <h1>Rent a toy!</h1>
  <div class="container">
    <div class="row">
      <% @toys.each do |toy| %>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <div class="card" style= "background-image: url(<%= cl_image_path toy.photo, height: 200, crop: :fill %>)">
            <div class="card-category"><%= toy.category.upcase %></div>
            <div class="card-price"><%= toy.price %>â‚¬/day</div>
            <div class="card-title"><%= toy.name.upcase %></div>
            <%= link_to '', toy_path(toy), class:'card-link' %>

          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= link_to 'add a new toy', new_toy_path %>
  <% end %>
</div>
