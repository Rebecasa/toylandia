<!-- <h1 class="text-center"><u>All our toys available</u></h1> -->
<br>
<div class="container-fluid">
  <div class="toys-index-wrapper">
    <div class="cards-container">
      <!-- The toys cards -->
      <div class="row">
        <% @toys.each do |toy| %>
        <div class="col-xs-6 col-md-4">
          <div class="card" style= "background-image: url(<%= cl_image_path toy.photo, height: 200, crop: :fill %>)">
            <div class="card-category"><%= toy.category.capitalize %></div>
            <div class="card-price"><%= number_to_currency(toy.price, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u") %>/day</div>
            <div class="card-title"><%= toy.name.upcase %></div>
            <%= link_to '', toy_path(toy), class:'card-link' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <!-- The map -->

    <div class="row col-xs-12 col-md-4">
      <div class="map-container">
        <div id="map" style="width: 100%; height: 700px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>

<!-- The button -->
<div class="container" id="button-container">
  <% if user_signed_in? %>
    <%= link_to 'add a new toy', new_toy_path, class:'button-form' %>
  <% end %>
</div>

