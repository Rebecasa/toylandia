<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for [toy, review] do |f| %>
      <%= f.input :content, as: :text, label: :Coments %>
      <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>


      <%= f.submit class: "btn btn-warning" %>
    <% end %>
</div>
</div>
